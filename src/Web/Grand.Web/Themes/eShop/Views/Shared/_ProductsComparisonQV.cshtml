@{
    var addtocomparelink = Url.RouteUrl("AddProductToCompare");
}
<template v-if="PopupQuickViewVueModal.CompareProductsEnabled">
    <button class="btn add-to-compare-list-button mr-1 btn-outline-secondary" :onclick="'AxiosCart.addproducttocomparelist(`@addtocomparelink/' + PopupQuickViewVueModal.AddToCart.ProductId + '`);return false;'" title="@Loc["Products.Compare.AddToCompareList"]">
        <b-icon icon="shuffle"></b-icon>
        <span class="sr-only">@Loc["Products.Compare.AddToCompareList"]</span>
        <span class="text">@Loc["Products.Compare.AddToCompareList"]</span>
    </button>
</template>