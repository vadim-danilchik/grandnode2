@model FooterModel

<footer class="footer">
    <div class="footer-top section">
        <div class="container">
            <div class="item-row">
                <div class="col-md-12 col-lg-4 col-xl-4">
                    <div class="d-flex align-items-baseline footer-title">
                        <span class="icon mr-2">
                            <b-icon icon="clock-history"></b-icon>
                        </span>
                        <h6 class="title">@Loc["Footer.Hour.Title"]</h6>
                    </div>
                    <ul>
                        <li>
                            <span class="text">@Loc["Footer.Hour.Online"]</span>
                        </li>
                        <li>
                            <span class="text">@Loc["Footer.Hour.Orders"]</span>
                        </li>
                        <li>
                            <span class="text">@Loc["Footer.Hour.Courier"]</span>
                        </li>
                    </ul>
                </div>
                <div class="col-md-12 col-lg-4 col-xl-4">
                    <div class="d-flex align-items-baseline footer-title">
                        <span class="icon mr-2">
                            <b-icon icon="cash-stack"></b-icon>
                        </span>
                        <h6 class="title">@Loc["Footer.Payments"]</h6>
                    </div>
                    <ul>
                        <li>
                            <span class="text">@Loc["Footer.Payments.Cashondelivery"]</span>
                        </li>
                        <li>
                            <span class="text">@Loc["Footer.Payments.Cardondelivery"]</span>
                        </li>
                        <li>
                            <span class="text">@Loc["Footer.Payments.Epos"]</span>
                        </li>
                        <li>
                            <span class="text">@Loc["Footer.Payments.Postondelivery"]</span>
                        </li>
                        @*<li>
                                <span class="text">@Loc["Footer.Payments.Cardonline"]</span>
                            </li>*@
                    </ul>
                </div>
                <div class="col-md-12 col-lg-4 col-xl-4 footer-registration">
                    <span class="footer-disclaimer text-black-50">@Html.Raw(Loc["Content.CopyrightNotice", Model.StoreName, DateTime.Now.Year])</span>
                </div>
            </div>
        </div>
    </div>
    @*<div class="footer-bottom section">
            <div class="container">
                <div class="item-row">
                    <div class="pb-1 pt-1 flex-column text-lg-left text-center copyright col-12">
                        <span class="footer-disclaimer text-black-50">@Html.Raw(Loc["Content.CopyrightNotice", Model.StoreName, DateTime.Now.Year])</span>
                    </div>
                    <div class="pb-1 pt-1 text-center text-lg-right col-md-6 col-12">
                        <span>Shopping cart software by </span><a class="pr-1 text-success" href="https://grandnode.com/">GrandNode</a>™
                    </div>
                </div>
            </div>
        </div>*@
    @await Component.InvokeAsync("Widget", new { widgetZone = "footer" })
</footer>
