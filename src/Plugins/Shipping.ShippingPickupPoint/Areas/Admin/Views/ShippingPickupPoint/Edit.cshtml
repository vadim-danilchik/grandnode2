@{
    Layout = "_AdminPopupLayout";
}
@model Shipping.ShippingPickupPoint.Models.ShippingPickupPointModel

<form asp-controller="ShippingPickupPoint" asp-action="Edit" method="post"
        asp-route-ShippingPickupPointId="@Context.Request.Query["ShippingPickupPointId"]"
        asp-route-btnId="@Context.Request.Query["btnId"]"
        asp-route-formId="@Context.Request.Query["formId"]">
    
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        @Loc["Admin.Common.Edit"]
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @Loc["Admin.Common.Save"] </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <partial name="_CreateOrUpdate" model="Model" />
        </div>
    </div>
</form>