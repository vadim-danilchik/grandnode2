@model IList<ProductOverviewModel>
@if (Model.Any())
{
    <div class="related-products-grid  product-grid col-12 px-0">
        <h2 class="h3 generalTitle text-center">@Loc["Products.RelatedProducts"]</h2>
        <div class="form-row">
            @foreach (var item in Model)
            {
                <div class="col-for-5-xl col-lg-3 col-sm-4 col-md-3 col-6 product-container mb-2">
                    <partial name="_CatalogProductView" model="item" />
                </div>
            }
        </div>
    </div>
}

